<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstStoryDateKotlin">

    <Button
        android:id="@+id/deletebutton17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="delete"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="@+id/editTextFirstKotlinageInput"
        app:layout_constraintTop_toTopOf="@+id/saveButton16" />

    <Button
        android:id="@+id/saveButton16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="save"
        android:text="Save"
        app:layout_constraintStart_toStartOf="@+id/editTextFirstKotlinageInput"
        app:layout_constraintTop_toBottomOf="@+id/editTextFirstKotlinageInput" />

    <EditText
        android:id="@+id/editTextFirstKotlinageInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:hint="Enter Your Age"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFirstKotlinageShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:hint="Your age :"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveButton16" />
</androidx.constraintlayout.widget.ConstraintLayout>